<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/tranreqtypeBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:contentPaddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tranreqtypeImage"
                android:layout_width="257dp"
                android:layout_height="228dp"
                android:contentDescription="@string/null_description"
                android:transitionName="tranreqimage"
                app:srcCompat="@drawable/ic_schedule" />

            <TextView
                android:id="@+id/tranreqtypeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Плановая"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="#D3D3D3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:width="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_code"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:layout_margin="10dp"
                    android:textColor="#D3D3D3"/>
                <TextView
                    android:id="@+id/tranreqtypeCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textColor="#D3D3D3"/>
            </LinearLayout>
            
        </LinearLayout>


    </androidx.cardview.widget.CardView>

   
</androidx.constraintlayout.widget.ConstraintLayout>